<div class="multirow-section">
  {%- for block in section.blocks -%}
    <div class="feature-row">
      <div
        class="feature-row__item"
        style="flex-direction: {{block.settings.layout}};"
      >
        <div class="feature-row__image-wrapper">
          <img
            class="feature-row__image--img"
            src="{{ block.settings.image | img_url: 'medium' }}"
            alt="{{ block.settings.image_alt_text }}"
          >
        </div>
        <div class="feature-row__image--content">
          <{{ block.settings.text_tag }}
            class="feature-row__image--text"
            style="
              font-size: {{ block.settings.text_font_size }}px;
              color: {{ block.settings.text_color }};
            "
          >
            {{ block.settings.text }}
          </{{ block.settings.text_tag }}>
        </div>
      </div>
    </div>
  {%- endfor -%}
</div>

<style>
  .multirow-section {
    padding: {{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_left }}px;
  }
</style>

{% schema %}
{
  "name": "Multirow",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top padding",
      "min": 0,
      "max": 50,
      "step": 1,
      "default": 0,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom padding",
      "min": 0,
      "max": 50,
      "step": 1,
      "default": 0,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_left",
      "label": "Left padding",
      "min": 0,
      "max": 50,
      "step": 1,
      "default": 0,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_right",
      "label": "Right padding",
      "min": 0,
      "max": 50,
      "step": 1,
      "default": 0,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "row_gap",
      "label": "Row gap",
      "min": 0,
      "max": 50,
      "step": 1,
      "default": 0,
      "unit": "px"
    }
  ],
  "blocks": [
    {
      "type": "image_with_text",
      "name": "Image with Text",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "Your text here..."
        },
        {
          "type": "select",
          "id": "text_tag",
          "label": "Text Tag",
          "options": [
            { "value": "p", "label": "Paragraph (p)" },
            { "value": "h1", "label": "Heading 1 (h1)" },
            { "value": "h2", "label": "Heading 2 (h2)" },
            { "value": "span", "label": "Span (span)" },
            { "value": "div", "label": "Div (div)" }
          ],
          "default": "p"
        },
        {
          "type": "range",
          "id": "text_font_size",
          "label": "Text Font Size",
          "min": 10,
          "max": 30,
          "step": 1,
          "default": 16,
          "unit": "px"
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Text Color",
          "default": "#000000"
        },
        {
          "type": "select",
          "id": "layout",
          "label": "Layout",
          "options": [
            { "value": "normal", "label": "Normal (row)" },
            { "value": "row-reverse", "label": "Reverse (row-reverse)" }
          ],
          "default": "normal"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Multirow",
      "category": "Custom",
      "settings": {},
      "blocks": [
        {
          "type": "image_with_text"
        }
      ]
    }
  ]
}
{% endschema %}
